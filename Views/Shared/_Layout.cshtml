<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - TP05</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <header>
            <style>
                ul {
                    list-style-type: none;
                    margin: 0%;
                    width: 98%;
                    height: 10%;
                    overflow: hidden;
                    background-color: #333;
                }
                li {
                    float: right;
                }
                .logo {
                    float: left;
                }
                li a {
                  display: block;
                  color: white;
                  text-align: center;
                  padding: 16px 18px;
                  text-decoration: none;
                }

                li a:hover:not(.active) {
                  background-color: #111;
                }
                .active{
                    background-color: green;
                }
            </style>
            <ul>
                <a href='@Url.Action("Index","Home")'><img src="~/Imagenes/Logo.jpg" alt="Logo" width="" height="45"></a>
                <li><a href='@Url.Action("Creditos","Home")'>Creditos</a></li>
                <li><a href="#demostracion">Como jugar</a></li>
                <li><a class="active" href='@Url.Action("Index","Home")'>Home</a></li>
            </ul>
        </header>
        <div style="padding:10px 0px 0px 15px;">
            @RenderBody()
        </div>
        <footer>
                &copy; @DateTime.Now.Year - Taller de Programación - TP05
        </footer>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
